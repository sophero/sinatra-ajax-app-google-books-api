<h2>Sign In</h2>
<div class="sign-in-form__container">
    <form class="sign-in-form" action="/sign_in" method="post">
        <input type="text" name="username" placeholder="Username">
        <input type="password" name="password" placeholder="Password">
        <input type="submit" value="Sign In">
    </form>
</div>


<h2>Not a member? Sign up below.</h2>
<div class="sign-up-form__container">
    <form class="sign-up-form" action="/create_user" method="post">
        <input type="text" name="[user]username" placeholder="Username">
        <input type="text" name="[user]email" placeholder="Email address">
        <input type="password" name="[user]password" placeholder="Password">
        <input type="submit" value="Sign Up">
    </form>
</div>
